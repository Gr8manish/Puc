<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/googleMap"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/btnLocationUpdates"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#ff058fff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Start"
            android:layout_marginRight="2dp"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:textColor="#000066" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#ff058fff"
            android:text="Ask For Help"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:textColor="#000066" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text=" Rupees = 0"
        android:layout_weight="1"
        android:id="@+id/rupee"
        android:background="#ff058fff"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginRight="2dp"
        android:textSize="20dp"
        android:textColor="#000066"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/latlongLocation"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#ff058fff"
        android:gravity="bottom|center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="Distance=0"
        android:layout_weight="1"
        android:textColor="#000066"
        android:textSize="20dp"
        android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="1 vehical available"
        android:layout_weight="1"
        android:id="@+id/msgOnMap"
        android:background="#ff058fff"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000066"
        android:textStyle="bold"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:id="@+id/Counterview"
        android:background="#ff058fff"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000066"
        android:textStyle="bold"
        android:layout_above="@+id/msgOnMap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/msgOnMap"
        android:layout_alignEnd="@+id/msgOnMap"
        android:visibility="gone" />


</RelativeLayout>





